{
  "compilerOptions": {
    "jsx": "react",
    "incremental": true,            
    "target": "es2015",                
    "module": "commonjs",           
    "declaration": true,   
    "downlevelIteration": true,         
    "outDir": "dist",                
    "esModuleInterop": true,       
    "skipLibCheck": true,           
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}